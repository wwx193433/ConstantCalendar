<?xml version="1.0" encoding="utf-8"?>
<FrameLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:id="@+id/ringLayout"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@drawable/clock_bg">

    <LinearLayout
        android:id="@+id/sleepLayout"
        android:layout_width="match_parent"
        android:layout_height="100dp"
        android:background="#33000000"
        android:visibility="visible"
        >
        <TextView
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:gravity="center"
            android:textSize="25sp"
            android:textColor="#aaffffff"
            android:text="触摸屏幕任意地方推迟"
            />
    </LinearLayout>

    <LinearLayout
        android:id="@+id/nextRingLayout"
        android:layout_width="match_parent"
        android:layout_height="100dp"
        android:background="#33000000"
        android:visibility="gone"
        android:orientation="vertical"
        >
        <TextView
            android:layout_width="match_parent"
            android:layout_height="1dp"
            android:layout_weight="1"
            android:gravity="center|bottom"
            android:textColor="@color/white"
            android:text="下一次响铃时间"
            android:textSize="22sp"
            />
        <TextView
            android:id="@+id/nextTime"
            android:layout_width="match_parent"
            android:layout_height="1dp"
            android:layout_weight="1"
            android:gravity="center|top"
            android:textSize="25sp"
            android:textColor="@color/white"
            />
    </LinearLayout>

    <LinearLayout
        android:id="@+id/circleLayout"
        android:layout_width="200dp"
        android:layout_height="200dp"
        android:layout_gravity="center"
        android:background="@drawable/clock_circle"
        android:orientation="vertical"
        android:visibility="gone"
        >
    </LinearLayout>

    <LinearLayout
        android:id="@+id/currentLayout"
        android:layout_width="match_parent"
        android:layout_height="160dp"
        android:layout_gravity="bottom"
        android:background="#33000000"
        android:orientation="vertical"
        >
        <TextView
            android:layout_width="match_parent"
            android:layout_height="1dp"
            android:layout_weight="2"
            android:gravity="center"
            android:textSize="25sp"
            android:textColor="#aaffffff"
            android:text="拖到圈外结束闹铃"
            />
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="1dp"
            android:layout_weight="3"
            android:orientation="vertical"
            >
            <TextView
                android:id="@+id/clock_title"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:singleLine="true"
                android:ellipsize="none"
                android:gravity="center"
                android:textColor="@color/white"
                android:textSize="25sp"
                />
            <TextView
                android:id="@+id/currentTime"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:gravity="center"
                android:textColor="@color/white"
                android:textSize="25sp"
                />
        </LinearLayout>

    </LinearLayout>
    <com.skyfishjy.library.RippleBackground
        xmlns:app="http://schemas.android.com/apk/res-auto"
        android:id="@+id/content"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:clipChildren="false"
        app:rb_color="#77ffffff"
        app:rb_duration="3000"
        app:rb_radius="22dp"
        app:rb_rippleAmount="4"
        app:rb_scale="4">

        <ImageView
            android:id="@+id/centerImage"
            android:layout_width="70dp"
            android:layout_height="70dp"
            android:layout_centerInParent="true"
            android:src="@drawable/clock" />
    </com.skyfishjy.library.RippleBackground>
</FrameLayout>
