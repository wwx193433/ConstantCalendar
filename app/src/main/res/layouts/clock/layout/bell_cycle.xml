<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:opensky="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    >

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="40dp"
        android:background="@drawable/item_bottom_border"
        >
        <TextView
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:gravity="left|center"
            android:text="响铃周期"
            android:paddingLeft="10dp"
            android:textSize="18sp"
            android:textColor="@color/black"
            />
    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="120dp"
        android:orientation="vertical"
        android:background="@color/white"
        android:paddingLeft="20dp"
        >
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="1dp"
            android:layout_weight="1"
            android:orientation="horizontal"
            >
            <LinearLayout
                android:layout_width="1dp"
                android:layout_weight="1"
                android:layout_height="match_parent"
                >
                <com.sky.plug.widget.IconFontCheckBox
                    android:id="@+id/chb_monday"
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:gravity="left|center"
                    opensky:iconChecked="@string/icon_checked"
                    opensky:iconUncheck="@string/icon_uncheck"
                    opensky:checkedColor="@color/special"
                    android:textSize="16sp"
                    android:textColor="@color/gray"
                    android:text="每周一"
                    android:button="@null"
                    />
            </LinearLayout>
            <LinearLayout
                android:layout_width="1dp"
                android:layout_weight="1"
                android:layout_height="match_parent"
                >
                <com.sky.plug.widget.IconFontCheckBox
                    android:id="@+id/chb_tuesday"
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:gravity="left|center"
                    android:textSize="16sp"
                    opensky:iconChecked="@string/icon_checked"
                    opensky:iconUncheck="@string/icon_uncheck"
                    opensky:checkedColor="@color/special"
                    android:textColor="@color/gray"
                    android:text="每周二"
                    android:button="@null"
                    />
            </LinearLayout>
            <LinearLayout
                android:layout_width="1dp"
                android:layout_height="match_parent"
                android:layout_weight="1"
                >
                <com.sky.plug.widget.IconFontCheckBox
                    android:id="@+id/chb_wednesday"
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:gravity="left|center"
                    android:textSize="16sp"
                    opensky:iconChecked="@string/icon_checked"
                    opensky:iconUncheck="@string/icon_uncheck"
                    opensky:checkedColor="@color/special"
                    android:textColor="@color/gray"
                    android:text="每周三"
                    android:button="@null"
                    />
            </LinearLayout>
        </LinearLayout>
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="1dp"
            android:layout_weight="1"
            android:orientation="horizontal"
            >
            <LinearLayout
                android:layout_width="1dp"
                android:layout_weight="1"
                android:layout_height="match_parent"
                >
                <com.sky.plug.widget.IconFontCheckBox
                    android:id="@+id/chb_thursday"
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:gravity="left|center"
                    android:textSize="16sp"
                    opensky:iconChecked="@string/icon_checked"
                    opensky:iconUncheck="@string/icon_uncheck"
                    opensky:checkedColor="@color/special"
                    android:textColor="@color/gray"
                    android:text="每周四"
                    android:button="@null"
                    />
            </LinearLayout>
            <LinearLayout
                android:layout_width="1dp"
                android:layout_weight="1"
                android:layout_height="match_parent"
                >
                <com.sky.plug.widget.IconFontCheckBox
                    android:id="@+id/chb_friday"
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:gravity="left|center"
                    android:textSize="16sp"
                    opensky:iconChecked="@string/icon_checked"
                    opensky:iconUncheck="@string/icon_uncheck"
                    opensky:checkedColor="@color/special"
                    android:textColor="@color/gray"
                    android:text="每周五"
                    android:button="@null"
                    />
            </LinearLayout>
            <LinearLayout
                android:layout_width="1dp"
                android:layout_height="match_parent"
                android:layout_weight="1"
                >
                <com.sky.plug.widget.IconFontCheckBox
                    android:id="@+id/chb_saturday"
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:gravity="left|center"
                    android:textSize="16sp"
                    opensky:iconChecked="@string/icon_checked"
                    opensky:iconUncheck="@string/icon_uncheck"
                    opensky:checkedColor="@color/special"
                    android:textColor="@color/gray"
                    android:text="每周六"
                    android:button="@null"
                    />
            </LinearLayout>
        </LinearLayout>
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="1dp"
            android:layout_weight="1"
            android:orientation="horizontal"
            >
            <LinearLayout
                android:layout_width="1dp"
                android:layout_weight="1"
                android:layout_height="match_parent"
                >
                <com.sky.plug.widget.IconFontCheckBox
                    android:id="@+id/chb_sunday"
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:gravity="left|center"
                    android:textSize="16sp"
                    opensky:iconChecked="@string/icon_checked"
                    opensky:iconUncheck="@string/icon_uncheck"
                    opensky:checkedColor="@color/special"
                    android:textColor="@color/gray"
                    android:text="每周日"
                    android:button="@null"
                    />
            </LinearLayout>
            <LinearLayout
                android:layout_width="1dp"
                android:layout_weight="1"
                android:layout_height="match_parent"
                >
                <com.sky.plug.widget.IconFontCheckBox
                    android:id="@+id/chb_everyday"
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:gravity="left|center"
                    android:textSize="16sp"
                    opensky:iconChecked="@string/icon_checked"
                    opensky:iconUncheck="@string/icon_uncheck"
                    opensky:checkedColor="@color/special"
                    android:textColor="@color/gray"
                    android:text="每天"
                    android:button="@null"
                    />
            </LinearLayout>
            <LinearLayout
                android:layout_width="1dp"
                android:layout_height="match_parent"
                android:layout_weight="1"
                >
                <com.sky.plug.widget.IconFontCheckBox
                    android:id="@+id/chb_once"
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:gravity="left|center"
                    android:textSize="16sp"
                    opensky:iconChecked="@string/icon_checked"
                    opensky:iconUncheck="@string/icon_uncheck"
                    opensky:checkedColor="@color/special"
                    android:textColor="@color/gray"
                    android:text="响铃一次"
                    android:button="@null"
                    />
            </LinearLayout>
        </LinearLayout>

    </LinearLayout>

    <!-- 取消、完成工具栏-->
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="40dp"
        android:background="@color/white"
        >
        <TextView
            android:id="@+id/bc_cancel"
            android:layout_width="1dp"
            android:layout_height="match_parent"
            android:layout_weight="1"
            android:text="取消"
            android:gravity="center"
            android:textSize="18sp"
            />
        <TextView
            android:id="@+id/bc_confirm"
            android:layout_width="1dp"
            android:layout_height="match_parent"
            android:layout_weight="1"
            android:textColor="@color/special"
            android:text="完成"
            android:gravity="center"
            android:textSize="18sp"
            />
    </LinearLayout>

</LinearLayout>
