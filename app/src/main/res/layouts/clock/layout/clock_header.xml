<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:opensky="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="55dp"
    android:gravity="center_vertical"
    android:paddingLeft="10dp"
    android:paddingRight="10dp"
    android:paddingTop="3dp"
    android:paddingBottom="3dp"
    >
    <LinearLayout
        android:id="@+id/clk_back"
        android:layout_width="wrap_content"
        android:layout_height="match_parent"
        android:layout_alignParentLeft="true"
        >
        <com.sky.plug.widget.IconFontTextview
            android:layout_width="wrap_content"
            android:layout_height="match_parent"
            android:gravity="center_vertical"
            android:textSize="25sp"
            android:textColor="@color/white"
            android:text="@string/icon_back"
            />
    </LinearLayout>

    <LinearLayout
        android:layout_width="wrap_content"
        android:layout_height="match_parent"
        android:layout_centerHorizontal="true"
        >
        <com.sky.plug.widget.IconFontTextview
            android:layout_width="wrap_content"
            android:layout_height="match_parent"
            android:gravity="center_vertical"
            android:textSize="20sp"
            opensky:iconSize="22sp"
            opensky:iconLeft="@string/icon_clock"
            android:textColor="@color/white"
            android:text="闹钟设置"
            />
    </LinearLayout>

    <LinearLayout
        android:id="@+id/clk_save"
        android:layout_width="wrap_content"
        android:layout_height="match_parent"
        android:layout_alignParentRight="true"
        >
        <com.sky.plug.widget.IconFontTextview
            android:layout_width="wrap_content"
            android:layout_height="match_parent"
            android:gravity="center_vertical"
            android:textSize="25sp"
            android:textColor="@color/white"
            android:text="@string/icon_confirm"
            />
    </LinearLayout>
</RelativeLayout>
