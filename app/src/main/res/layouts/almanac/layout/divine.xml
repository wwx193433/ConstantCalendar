<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:opensky="http://schemas.android.com/apk/res-auto"
    android:orientation="vertical"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:background="@drawable/corner_panel"
    android:layout_marginTop="6dp"
    android:id="@+id/almanac_layout"
    >

    <LinearLayout
        android:orientation="horizontal"
        android:layout_width="wrap_content"
        android:layout_height="match_parent">
        <com.sky.plug.widget.FangzhengFontTextView
            android:id="@+id/dv_solar_date"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textSize="25sp"
            android:textColor="@color/special"
            android:typeface="serif"
            android:text="农历闰六月廿六"
            />
        <TextView
            android:id="@+id/dv_week"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textSize="15sp"
            android:layout_marginLeft="10dp"
            android:text="星期四"
            />
    </LinearLayout>
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="10dp"
        android:orientation="vertical"
        >
        <com.sky.plug.widget.IconFontTextview
            android:id="@+id/should"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:textSize="14sp"
            opensky:iconSize="14sp"
            opensky:iconColor="@color/green"
            opensky:iconLeft="@string/icon_should"
            android:gravity="left"
            android:ellipsize="end"
            android:singleLine="true"
            android:text="无" />
        <com.sky.plug.widget.IconFontTextview
            android:id="@+id/avoid"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="10dp"
            android:textSize="14sp"
            opensky:iconSize="14sp"
            opensky:iconColor="@color/red"
            opensky:iconLeft="@string/icon_avoid"
            android:gravity="left"
            android:ellipsize="end"
            android:singleLine="true"
            android:text="无" />


    </LinearLayout>

</LinearLayout>