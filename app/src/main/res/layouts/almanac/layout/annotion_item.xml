<LinearLayout
    android:layout_width="match_parent"
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_height="wrap_content"
    android:orientation="vertical"
    android:background="@color/white"
    android:layout_marginBottom="5dp"
    android:paddingLeft="10dp"
    android:paddingRight="10dp"
    >
    <TextView
        android:id="@+id/ano_name"
        android:layout_width="wrap_content"
        android:layout_height="40dp"
        android:gravity="center_vertical"
        android:drawableLeft="@drawable/point"
        android:textSize="16sp"
        android:textColor="#e16531"
        android:text=""
        />
    <View
        android:layout_width="match_parent"
        android:layout_height="1dp"
        android:padding="10dp"
        android:background="#77dddddd"
        android:layout_gravity="center_horizontal"
        />
    <com.sky.plug.widget.IconFontTextview
        android:id="@+id/ano_yi"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textSize="22sp"
        android:paddingTop="10dp"
        android:textColor="@color/green"
        android:text="@string/icon_should"
        android:visibility="gone"
        />
    <com.sky.plug.widget.IconFontTextview
        android:id="@+id/ano_ji"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textSize="22sp"
        android:paddingTop="10dp"
        android:textColor="@color/red"
        android:text="@string/icon_avoid"
        android:visibility="gone"
        />
    <LinearLayout
        android:id="@+id/ano_items"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        >

    </LinearLayout>
</LinearLayout>