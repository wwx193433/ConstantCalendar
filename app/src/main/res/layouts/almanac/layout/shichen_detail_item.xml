<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:opensky="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:orientation="horizontal"
    android:gravity="center_horizontal"
    >
    <RelativeLayout
        android:layout_width="60dp"
        android:layout_height="match_parent"
        android:orientation="vertical"
        >
        <TextView
            android:id="@+id/shichen_key"
            android:layout_width="wrap_content"
            android:layout_height="30dp"
            android:layout_centerHorizontal="true"
            android:background="@drawable/shichen_circle_back"
            android:gravity="center"
            android:text="子"
            />
        <TextView
            android:layout_below="@+id/shichen_key"
            android:layout_width="1dp"
            android:layout_height="fill_parent"
            android:layout_centerHorizontal="true"
            android:background="@android:color/darker_gray"
            />
    </RelativeLayout>
    <LinearLayout
        android:layout_width="1dp"
        android:layout_height="wrap_content"
        android:layout_weight="1"
        android:orientation="vertical"
        android:layout_marginBottom="15dp"
        android:background="@color/white"
        android:padding="10dp"
        >
        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            >
            <TextView
                android:id="@+id/shichen_name"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textColor="@color/black"
                android:textSize="16sp"
                android:text="丁丑时"
                />
            <TextView
                android:id="@+id/shichen_time"
                android:layout_marginLeft="10dp"
                android:layout_toRightOf="@+id/shichen_name"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textSize="16sp"
                android:text="01:00-02:59"
                />
            <TextView
                android:id="@+id/shichen_chongsha"
                android:layout_marginLeft="10dp"
                android:layout_toRightOf="@+id/shichen_time"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textSize="16sp"
                />
            <TextView
                android:id="@+id/shichen_jixiong"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignParentRight="true"
                android:gravity="center"
                android:textColor="@color/white"
                android:textSize="14sp"
                android:text="吉"
                />
        </RelativeLayout>

        <TextView
            android:id="@+id/shichen_caixi"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="5dp"
            />

        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:layout_marginTop="10dp"
            >
            <com.sky.plug.widget.IconFontTextview
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textSize="14sp"
                android:textColor="@color/green"
                android:text="@string/icon_should"
                />
            <TextView
                android:id="@+id/shichen_yi"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginLeft="10dp"
                android:gravity="left"
                android:text="嫁娶 纳彩 订盟 祭祀 开光 出行 理发 动土 安床 放水 开渠 栽种 进口" />
        </LinearLayout>
        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:layout_marginTop="10dp"
            >
            <com.sky.plug.widget.IconFontTextview
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textSize="14sp"
                android:textColor="@color/red"
                android:text="@string/icon_avoid"
                />
            <TextView
                android:id="@+id/shichen_ji"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:gravity="left"
                android:layout_marginLeft="10dp"
                android:text="入宅 上梁 入殓 盖屋 探病 做灶 安门 安葬 纳畜 伐木 探病 做灶" />
        </LinearLayout>
    </LinearLayout>
</LinearLayout>
